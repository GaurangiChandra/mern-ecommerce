{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "description": "MERN furniturehouse app ",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "client-install": "npm install --prefix client",
    "backserver": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "start": "concurrently \"npm run backserver \" \"npm run client\" ",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GaurangiChandra/mern-ecommerce.git"
  },
